<rs:RSUserControl
    x:Class="RS.Annotation.Views.Areas.AnnotationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:RS.Widgets.Models;assembly=RS.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:effects="clr-namespace:RS.Widgets.PixelShaders;assembly=RS.Widgets"
    xmlns:local="clr-namespace:RS.Annotation.Views.Areas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/HMIProject"
    x:Name="this"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <rs:RSUserControl.DataContext>
        <local:AnnotationViewModel />
    </rs:RSUserControl.DataContext>
    <rs:RSUserControl.Resources>
        <ResourceDictionary>
            <rs:IndexGetConverter x:Key="IndexGetConverter" />
            <rs:ForegroundColorConverter x:Key="ForegroundColorConverter" />
            <DataTemplate x:Key="TagModelDataTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border
                        Height="20"
                        Padding="8,5,8,5"
                        Background="{Binding TagColor}"
                        CornerRadius="3">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{Binding TagColor, Converter={StaticResource ForegroundColorConverter}}"
                            Text="{Binding ShortCut}" />
                    </Border>
                    <Grid Grid.Column="1">
                        <TextBlock
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding ClassName}" />
                    </Grid>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </rs:RSUserControl.Resources>
    <Grid x:Name="RootHost" Background="#F0F1F7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Margin="0,3,3,3">
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RSApp.Styles.TextBlockStyle}" Text="导航器" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ScaleDes}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button
                                x:Name="BtnSizeAuto"
                                Margin="0,0,3,0"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.FullScreen}"
                                Click="BtnSizeAuto_Click"
                                Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                                ToolTip="图像自适应" />
                        </StackPanel>

                    </Grid>
                </GroupBox.Header>
                <Border Background="#fff">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border>
                                <Border.Effect>
                                    <effects:BrightnessContrastEffect Brightness="{Binding Path=PicturesView.ViewModel.Brightness, ElementName=this}" Contrast="{Binding Path=PicturesView.ViewModel.Contrast, ElementName=this}" />
                                </Border.Effect>
                                <Grid
                                    x:Name="NavCanvasHost"
                                    ClipToBounds="True"
                                    KeyDown="NavCanvasHost_KeyDown"
                                    KeyUp="NavCanvasHost_KeyUp"
                                    MouseDown="NavCanvasHost_MouseDown"
                                    MouseEnter="NavCanvasHost_MouseEnter"
                                    MouseLeave="NavCanvasHost_MouseLeave"
                                    MouseMove="NavCanvasHost_MouseMove"
                                    MouseUp="NavCanvasHost_MouseUp"
                                    MouseWheel="NavCanvasHost_MouseWheel">
                                    <Image
                                        x:Name="NavImg"
                                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                                        Source="{Binding ImgSource}"
                                        Stretch="Uniform" />
                                </Grid>
                            </Border>

                            <Canvas x:Name="NavCanvs" ClipToBounds="True">
                                <Border
                                    x:Name="NavRectangle"
                                    Canvas.Left="{Binding NavRectModel.CanvasLeft}"
                                    Canvas.Top="{Binding NavRectModel.CanvasTop}"
                                    Width="{Binding NavRectModel.Width}"
                                    Height="{Binding NavRectModel.Height}"
                                    BorderBrush="#fff"
                                    BorderThickness="1">
                                    <Border BorderBrush="#000" BorderThickness="1" />
                                </Border>
                            </Canvas>
                        </Grid>

                        <Border Grid.Row="1" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="BtnScaleDown"
                                    Grid.Column="0"
                                    Margin="0,0,3,0"
                                    rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ScaleDown}"
                                    Click="BtnScaleDown_Click"
                                    Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                                    ToolTip="缩小" />
                                <Slider
                                    x:Name="SliderScale"
                                    Grid.Column="1"
                                    rs:ControlsHelper.IsShowValue="False"
                                    Maximum="{Binding MaxScale}"
                                    Minimum="{Binding MinScale}"
                                    ValueChanged="SliderScale_ValueChanged"
                                    Value="{Binding Scale}" />
                                <Button
                                    x:Name="BtnScaleUp"
                                    Grid.Column="2"
                                    Margin="0,0,3,0"
                                    rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ScaleUp}"
                                    Click="BtnScaleUp_Click"
                                    Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                                    ToolTip="放大" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </GroupBox>

            <Border
                Grid.Row="1"
                Margin="0,0,3,0"
                Padding="5"
                Background="#fff">
                <StackPanel>

                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="#949494"
                        Style="{StaticResource RSApp.Styles.TextBlockStyle}">
                        <Run Text="透明度" />
                        <Run Text="{Binding OpacityDes}" />
                    </TextBlock>

                    <Slider
                        x:Name="SliderOpacity"
                        rs:ControlsHelper.IsShowValue="False"
                        Maximum="255"
                        Minimum="0"
                        ValueChanged="SliderOpacity_ValueChanged"
                        Value="{Binding Opacity}" />


                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="#949494"
                        Style="{StaticResource RSApp.Styles.TextBlockStyle}">
                        <Run Text="亮度" />
                        <Run Text="{Binding Path=PicturesView.ViewModel.Brightness, ElementName=this, StringFormat={}{0}%}" />
                    </TextBlock>

                    <Slider
                        rs:ControlsHelper.IsShowValue="False"
                        Maximum="100"
                        Minimum="-100"
                        Value="{Binding Path=PicturesView.ViewModel.Brightness, ElementName=this}" />


                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Foreground="#949494"
                        Style="{StaticResource RSApp.Styles.TextBlockStyle}">
                        <Run Text="对比度" />
                        <Run Text="{Binding Path=PicturesView.ViewModel.Contrast, ElementName=this, StringFormat={}{0}%}" />
                    </TextBlock>

                    <Slider
                        rs:ControlsHelper.IsShowValue="False"
                        Maximum="100"
                        Minimum="0"
                        Value="{Binding Path=PicturesView.ViewModel.Contrast, ElementName=this}" />

                </StackPanel>
            </Border>

            <GroupBox
                x:Name="TagModelListHost"
                Grid.Row="2"
                Margin="0,3,3,3">
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Style="{StaticResource RSApp.Styles.TextBlockStyle}" Text="标注类别" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button
                                x:Name="BtnAddTagModel"
                                Margin="0,0,3,0"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Add}"
                                Click="BtnAddTagModel_Click"
                                Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                                ToolTip="新增标注类别" />
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>
                <ScrollViewer Background="#fff">
                    <ItemsControl Margin="3,5,5,5" ItemsSource="{Binding ElementName=this, Path=ProjectsView.ViewModel.ProjectModelSelect.TagModelList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel IsItemsHost="True" Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton
                                    Checked="RadioBtnTagModel_Checked"
                                    MouseDoubleClick="RadioBtnTagModel_DoubleClick"
                                    Tag="{Binding BindsDirectlyToSource=True}">
                                    <RadioButton.Style>
                                        <Style TargetType="{x:Type RadioButton}">
                                            <Setter Property="BorderBrush" Value="#eee" />
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="Margin" Value="0,0,0,3" />
                                            <Setter Property="IsChecked" Value="{Binding IsSelect, Mode=TwoWay}" />
                                            <Setter Property="SnapsToDevicePixels" Value="True" />
                                            <Setter Property="GroupName" Value="TagModelGroup" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                                        <Border
                                                            Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Border
                                                                    Padding="10,5,10,5"
                                                                    Background="{Binding TagColor}"
                                                                    CornerRadius="3,0,0,3">
                                                                    <TextBlock
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Foreground="{Binding TagColor, Converter={StaticResource ForegroundColorConverter}}"
                                                                        Text="{Binding ShortCut}" />
                                                                </Border>
                                                                <Grid Grid.Column="1">
                                                                    <TextBlock
                                                                        Margin="5,0,0,0"
                                                                        HorizontalAlignment="Left"
                                                                        VerticalAlignment="Center"
                                                                        Text="{Binding ClassName}" />
                                                                </Grid>

                                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                                    <Button
                                                                        Margin="0,0,5,0"
                                                                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Edit}"
                                                                        Click="BtnTagModelEidt_Click"
                                                                        ToolTip="编辑分类">
                                                                        <Button.Style>
                                                                            <Style BasedOn="{StaticResource RSApp.Styles.IconButtonStyle}" TargetType="{x:Type Button}">
                                                                                <Setter Property="Foreground" Value="#949494" />
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsSelect}" Value="True">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                    </Button>
                                                                    <Button
                                                                        Margin="0,0,5,0"
                                                                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Delete}"
                                                                        Click="BtnTagModelDelete_Click"
                                                                        ToolTip="删除分类">
                                                                        <Button.Style>
                                                                            <Style BasedOn="{StaticResource RSApp.Styles.IconButtonStyle}" TargetType="{x:Type Button}">
                                                                                <Setter Property="Foreground" Value="#949494" />
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsSelect}" Value="True">
                                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#eee" />
                                                            </Trigger>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="#eee" />
                                                                <Setter Property="BorderBrush" Value="{Binding TagColor}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </RadioButton.Style>
                                </RadioButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>

            </GroupBox>

        </Grid>


        <GroupBox Grid.Column="1" Margin="0,3,3,3">
            <GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>


                    <StackPanel Orientation="Horizontal">
                        <Button
                            Margin="0,0,3,0"
                            Padding="10,0,10,0"
                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ArrowLeft}"
                            rs:ControlsHelper.IconHeight="15"
                            rs:ControlsHelper.IconWidth="10"
                            Click="BtnPreImgModel_Click"
                            Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                            ToolTip="上一个图像" />

                        <TextBlock Padding="10,0,10,0" Style="{StaticResource RSApp.Styles.TextBlockStyle}">
                            <Run>
                                <Run.Text>
                                    <MultiBinding Converter="{StaticResource IndexGetConverter}" StringFormat="{}{0}">
                                        <Binding ElementName="this" Path="ImgModelSelect" />
                                        <Binding ElementName="this" Path="ProjectsView.ViewModel.ProjectModelSelect.ImgModelList" />
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                            <Run Text="{Binding Path=ProjectsView.ViewModel.ProjectModelSelect.ImgModelList.Count, Mode=OneWay, StringFormat='{}/ {0}', ElementName=this}" />
                        </TextBlock>

                        <Button
                            Margin="0,0,3,0"
                            Padding="10,0,10,0"
                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ArrowRight}"
                            rs:ControlsHelper.IconHeight="15"
                            rs:ControlsHelper.IconWidth="10"
                            Click="BtnNextImgModel_Click"
                            Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                            ToolTip="下一个图像" />

                        <TextBlock
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding ElementName=this, Path=PicturesView.ViewModel.ImgModelSelect.ImgName}"
                            TextWrapping="WrapWithOverflow" />

                        <Button
                            Margin="0,0,5,0"
                            rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Delete}"
                            Click="BtnDeleteImgSelect_Click"
                            ToolTip="删除图像">
                            <Button.Style>
                                <Style BasedOn="{StaticResource RSApp.Styles.IconButtonStyle}" TargetType="{x:Type Button}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ImgModelSelect}" Value="{x:Null}">
                                            <!--<Setter Property="Visibility" Value="Collapsed" />-->
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center" Text="{Binding Log}" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" />
                </Grid>
            </GroupBox.Header>
            <Grid
                x:Name="AnnotationCanvasHost"
                Background="Transparent"
                FocusVisualStyle="{x:Null}"
                Focusable="True"
                KeyDown="AnnotationCanvasHost_KeyDown"
                KeyUp="AnnotationCanvasHost_KeyUp"
                MouseDown="AnnotationCanvasHost_MouseDown"
                MouseEnter="AnnotationCanvasHost_MouseEnter"
                MouseLeave="AnnotationCanvasHost_MouseLeave"
                MouseMove="AnnotationCanvasHost_MouseMove"
                MouseUp="AnnotationCanvasHost_MouseUp"
                MouseWheel="AnnotationCanvasHost_MouseWheel">
                <Border>
                    <Border.Effect>
                        <effects:BrightnessContrastEffect Brightness="{Binding Path=PicturesView.ViewModel.Brightness, ElementName=this}" Contrast="{Binding Path=PicturesView.ViewModel.Contrast, ElementName=this}" />
                    </Border.Effect>
                    <Grid ClipToBounds="True">
                        <Canvas
                            x:Name="ImgCanvas"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterX="{Binding CenterX}" CenterY="{Binding CenterY}" ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}" />
                                    <TranslateTransform X="{Binding TransformX}" Y="{Binding TransformY}" />
                                </TransformGroup>
                            </Canvas.RenderTransform>
                            <Image
                                x:Name="ImgView"
                                Canvas.Left="0"
                                Canvas.Top="0"
                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                Source="{Binding ImgSource}"
                                Stretch="Uniform" />
                        </Canvas>
                    </Grid>
                </Border>

                <Grid ClipToBounds="True">
                    <Canvas
                        x:Name="AnnotationCanvas"
                        Width="{Binding ElementName=ImgCanvas, Path=ActualWidth}"
                        Height="{Binding ElementName=ImgCanvas, Path=ActualHeight}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <Canvas.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform CenterX="{Binding CenterX}" CenterY="{Binding CenterY}" ScaleX="{Binding ScaleX}" ScaleY="{Binding ScaleY}" />
                                <TranslateTransform X="{Binding TransformX}" Y="{Binding TransformY}" />
                            </TransformGroup>
                        </Canvas.RenderTransform>
                    </Canvas>
                </Grid>

                <Grid x:Name="CrossLineHost" Background="Transparent">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=AnnotationCanvasHost, Path=IsMouseOver}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Line
                        x:Name="CrossHorizontalLineBlack"
                        Margin="0,1,0,0"
                        RenderOptions.EdgeMode="Aliased"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeDashArray="2 2"
                        StrokeDashCap="Flat"
                        StrokeThickness="1"
                        X1="0"
                        X2="{Binding ElementName=AnnotationCanvasHost, Path=ActualWidth}"
                        Y1="{Binding AnnotationCanvasHostMouseMovePosition.Y}"
                        Y2="{Binding AnnotationCanvasHostMouseMovePosition.Y}" />
                    <Line
                        x:Name="CrossHorizontalLineWhite"
                        Margin="0,1,0,0"
                        RenderOptions.EdgeMode="Aliased"
                        SnapsToDevicePixels="True"
                        Stroke="White"
                        StrokeDashArray="2 2"
                        StrokeDashCap="Flat"
                        StrokeDashOffset="2"
                        StrokeThickness="1"
                        X1="0"
                        X2="{Binding ElementName=AnnotationCanvasHost, Path=ActualWidth}"
                        Y1="{Binding AnnotationCanvasHostMouseMovePosition.Y}"
                        Y2="{Binding AnnotationCanvasHostMouseMovePosition.Y}" />
                    <Line
                        x:Name="CrossVerticalLineBlack"
                        Margin="1,0,0,0"
                        RenderOptions.EdgeMode="Aliased"
                        SnapsToDevicePixels="True"
                        Stroke="Black"
                        StrokeDashArray="2 2"
                        StrokeDashCap="Flat"
                        StrokeThickness="1"
                        X1="{Binding AnnotationCanvasHostMouseMovePosition.X}"
                        X2="{Binding AnnotationCanvasHostMouseMovePosition.X}"
                        Y1="0"
                        Y2="{Binding ElementName=AnnotationCanvasHost, Path=ActualHeight}" />
                    <Line
                        x:Name="CrossVerticalLineWhite"
                        Margin="1,0,0,0"
                        RenderOptions.EdgeMode="Aliased"
                        SnapsToDevicePixels="True"
                        Stroke="White"
                        StrokeDashArray="2 2"
                        StrokeDashCap="Flat"
                        StrokeDashOffset="2"
                        StrokeThickness="1"
                        X1="{Binding AnnotationCanvasHostMouseMovePosition.X}"
                        X2="{Binding AnnotationCanvasHostMouseMovePosition.X}"
                        Y1="0"
                        Y2="{Binding ElementName=AnnotationCanvasHost, Path=ActualHeight}" />
                </Grid>

            </Grid>
        </GroupBox>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <GroupBox Margin="0,3,0,3">


                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>


                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RSApp.Styles.TextBlockStyle}" Text="标注详情" />
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Log}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                                Text="{Binding Path=PicturesView.ViewModel.ImgModelSelect.RectModelList.Count, Mode=OneWay, ElementName=this, StringFormat='{}{0}个'}" />
                        </StackPanel>
                    </Grid>
                </GroupBox.Header>
                <Border>
                    <DataGrid
                        FontSize="14"
                        HorizontalScrollBarVisibility="Hidden"
                        ItemsSource="{Binding Path=PicturesView.ViewModel.ImgModelSelect.RectModelList, ElementName=this}"
                        SelectionMode="Extended"
                        SelectionUnit="FullRow"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="30">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Margin="3"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding TagModel.TagColor}" />
                                            </Border.Background>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding TagModel.ClassName}"
                                Header="类别" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding CanvasLeft, StringFormat={}{0:F2}}"
                                Header="X" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding CanvasTop, StringFormat={}{0:F2}}"
                                Header="Y" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Width, StringFormat={}{0:F2}}"
                                Header="宽度" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Height, StringFormat={}{0:F2}}"
                                Header="高度" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

            </GroupBox>

            <GroupBox Grid.Row="1" Margin="0,0,0,3">
                <GroupBox.Style>
                    <Style BasedOn="{StaticResource RSApp.Styles.GroupBoxStyle}" TargetType="{x:Type GroupBox}">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RectModelSelect}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource RSApp.Styles.TextBlockStyle}" Text="编辑" />
                        </StackPanel>
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal" />
                        <StackPanel Grid.Column="2" Orientation="Horizontal" />
                    </Grid>
                </GroupBox.Header>
                <Border Padding="10" Background="#fff">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                            Text="类别" />
                        <ComboBox
                            x:Name="CombTagModel"
                            Grid.Row="0"
                            Grid.Column="1"
                            ItemTemplate="{StaticResource TagModelDataTemplate}"
                            ItemsSource="{Binding ElementName=this, Path=ProjectsView.ViewModel.ProjectModelSelect.TagModelList, Mode=OneWay}"
                            SelectedItem="{Binding RectModelSelect.TagModel}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                            Text="X" />

                        <rs:RSNumbericUpDown
                            x:Name="TxtCanvasLeft"
                            Grid.Row="1"
                            Grid.Column="1"
                            OnValueInputChanged="RectModel_OnValueInputChanged"
                            ValueInput="{Binding RectModelSelect.CanvasLeft}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                            Text="Y" />

                        <rs:RSNumbericUpDown
                            x:Name="TxtCanvasTop"
                            Grid.Row="2"
                            Grid.Column="1"
                            OnValueInputChanged="RectModel_OnValueInputChanged"
                            ValueInput="{Binding RectModelSelect.CanvasTop}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                            Text="宽度" />


                        <rs:RSNumbericUpDown
                            x:Name="TxtWidth"
                            Grid.Row="3"
                            Grid.Column="1"
                            OnValueInputChanged="RectModel_OnValueInputChanged"
                            ValueInput="{Binding RectModelSelect.Width}" />

                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Style="{StaticResource RSApp.Styles.TextBlockStyle}"
                            Text="高度" />

                        <rs:RSNumbericUpDown
                            x:Name="TxtHeight"
                            Grid.Row="4"
                            Grid.Column="1"
                            OnValueInputChanged="RectModel_OnValueInputChanged"
                            ValueInput="{Binding RectModelSelect.Height}" />
                    </Grid>

                </Border>

            </GroupBox>
        </Grid>
    </Grid>
</rs:RSUserControl>

<local:RSWindow
    x:Class="RS.Widgets.Controls.RSForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.Widgets.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="this"
    Title="RSForm"
    Width="500"
    Height="450"
    BorderCornerRadius="5"
    Focusable="True"
    IsFitSystem="True"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <GroupBox>
        <GroupBox.Header>
            <Grid>
                <TextBlock
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=this, Path=FormMessage.CRUD}" Value="Add">
                                    <Setter Property="Text" Value="新增数据" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=this, Path=FormMessage.CRUD}" Value="Update">
                                    <Setter Property="Text" Value="更新数据" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </GroupBox.Header>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border Padding="10,5,10,5">
                <ContentControl Grid.Row="0" Content="{Binding ElementName=this, Path=FormContent}" />
            </Border>
            <Border
                Grid.Row="1"
                Padding="0,2,0,2"
                Background="#eee">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="BtnSubmit"
                        Command="{x:Static local:RSForm.SubmitCommand}"
                        Style="{StaticResource RSApp.Styles.PrimaryButton}">
                        <AccessText Text="确认(_Y)" />
                    </Button>
                    <Button
                        x:Name="BtnReturn"
                        Command="{x:Static local:RSForm.ReturnCommand}"
                        Style="{StaticResource RSApp.Styles.DefaultButton}">
                        <AccessText Text="返回(_C)" />
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </GroupBox>

</local:RSWindow>

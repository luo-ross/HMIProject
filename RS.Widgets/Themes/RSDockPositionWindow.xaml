    <Style TargetType="{x:Type rs:RSDockPositionWindow}">
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="DockPositionWindowType" Value="Type1">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type rs:RSDockPositionWindow}">
                            <Border
                                x:Name="PART_Border"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Border
                                        x:Name="PART_Mask"
                                        Background="#7F006CBE"
                                        BorderBrush="#C8EEEEEE"
                                        BorderThickness="5"
                                        Visibility="Collapsed" />


                                    <CheckBox
                                        x:Name="PART_BtnLeftPosition"
                                        Width="42"
                                        Height="42"
                                        Margin="5,0,0,0"
                                        Padding="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Background="#C7EEEEEE"
                                        BorderBrush="#C7DDDDDD"
                                        BorderThickness="1"
                                        Style="{StaticResource RSApp.Styles.WindowLeftStyle}" />

                                    <CheckBox
                                        x:Name="PART_BtnTopPosition"
                                        Width="42"
                                        Height="42"
                                        Margin="0,5,0,0"
                                        Padding="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Background="#C7EEEEEE"
                                        BorderBrush="#C7DDDDDD"
                                        BorderThickness="1"
                                        Style="{StaticResource RSApp.Styles.WindowTopStyle}" />
                                    <CheckBox
                                        x:Name="PART_BtnRightPosition"
                                        Width="42"
                                        Height="42"
                                        Margin="0,0,5,0"
                                        Padding="3"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="#C7EEEEEE"
                                        BorderBrush="#C7DDDDDD"
                                        BorderThickness="1"
                                        Style="{StaticResource RSApp.Styles.WindowRightStyle}" />
                                    <CheckBox
                                        x:Name="PART_BtnBottomPosition"
                                        Width="42"
                                        Height="42"
                                        Margin="0,0,0,5"
                                        Padding="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Background="#C7EEEEEE"
                                        BorderBrush="#C7DDDDDD"
                                        BorderThickness="1"
                                        Style="{StaticResource RSApp.Styles.WindowBottomStyle}" />


                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowLeft">
                                    <Setter TargetName="PART_BtnLeftPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="HorizontalAlignment" Value="Left" />
                                    <Setter TargetName="PART_Mask" Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskWidth, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowTop">
                                    <Setter TargetName="PART_BtnTopPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="VerticalAlignment" Value="Top" />
                                    <Setter TargetName="PART_Mask" Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskHeight, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowRight">
                                    <Setter TargetName="PART_BtnRightPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="HorizontalAlignment" Value="Right" />
                                    <Setter TargetName="PART_Mask" Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskWidth, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowBottom">
                                    <Setter TargetName="PART_BtnBottomPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="VerticalAlignment" Value="Bottom" />
                                    <Setter TargetName="PART_Mask" Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskHeight, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="DockPositionWindowType" Value="Type2">

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type rs:RSDockPositionWindow}">
                            <Border
                                x:Name="PART_Border"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Border
                                        x:Name="PART_Mask"
                                        Background="#7F006CBE"
                                        BorderBrush="#C8EEEEEE"
                                        BorderThickness="5"
                                        Visibility="Collapsed" />


                                    <Border
                                        x:Name="PART_PositionHost"
                                        Padding="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <CheckBox
                                                x:Name="PART_BtnLeftPosition"
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.WindowLeftStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnTopPosition"
                                                Grid.Row="0"
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.WindowTopStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnRightPosition"
                                                Grid.Row="2"
                                                Grid.Column="4"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.WindowRightStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnBottomPosition"
                                                Grid.Row="4"
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.WindowBottomStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnTabLeftPosition"
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.TabLeftOrRightStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnTabTopPosition"
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.TabTopOrBottomStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnTabRightPosition"
                                                Grid.Row="2"
                                                Grid.Column="3"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.TabLeftOrRightStyle}" />

                                            <CheckBox
                                                x:Name="PART_BtnTabBottomPosition"
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.TabTopOrBottomStyle}" />


                                            <CheckBox
                                                x:Name="PART_BtnTabCenterPosition"
                                                Grid.Row="2"
                                                Grid.Column="2"
                                                Margin="2"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource RSApp.Styles.TabCenterStyle}" />



                                        </Grid>
                                    </Border>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path
                                            Width="{Binding ElementName=PART_PositionHost, Path=ActualWidth}"
                                            Height="{Binding ElementName=PART_PositionHost, Path=ActualHeight}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Fill="#64FFFFFF"
                                            RenderOptions.EdgeMode="Aliased"
                                            Stretch="Uniform"
                                            Stroke="#C7DDDDDD"
                                            StrokeThickness="1">
                                            <Path.Data>
                                                <CombinedGeometry GeometryCombineMode="Union">
                                                    <CombinedGeometry.Geometry1>
                                                        <CombinedGeometry GeometryCombineMode="Union">
                                                            <CombinedGeometry.Geometry1>
                                                                <RectangleGeometry Rect="-200,-45,400,90" />
                                                            </CombinedGeometry.Geometry1>
                                                            <CombinedGeometry.Geometry2>
                                                                <RectangleGeometry Rect="-45,-200,90,400" />
                                                            </CombinedGeometry.Geometry2>
                                                        </CombinedGeometry>
                                                    </CombinedGeometry.Geometry1>
                                                    <CombinedGeometry.Geometry2>
                                                        <PathGeometry Figures="M-110,0 0,-110 110,0 0,110Z" />
                                                    </CombinedGeometry.Geometry2>
                                                </CombinedGeometry>
                                            </Path.Data>
                                        </Path>
                                    </Grid>


                                </Grid>

                            </Border>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowLeft">
                                    <Setter TargetName="PART_BtnLeftPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="HorizontalAlignment" Value="Left" />
                                    <Setter TargetName="PART_Mask" Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskWidth, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowTop">
                                    <Setter TargetName="PART_BtnTopPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="VerticalAlignment" Value="Top" />
                                    <Setter TargetName="PART_Mask" Property="Height" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskHeight, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTrigger>

                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=BtnPositionInfoSelect.Position, UpdateSourceTrigger=PropertyChanged}" Value="WindowRight">
                                    <Setter TargetName="PART_BtnRightPosition" Property="IsChecked" Value="True" />
                                    <Setter TargetName="PART_Mask" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="PART_Mask" Property="HorizontalAlignment" Value="Right" />
                                    <Setter TargetName="PART_Mask" Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=PositionMaskWidth, UpdateSourceTrigger=PropertyChanged}" />

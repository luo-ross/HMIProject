    <Style x:Key="RSApp.Styles.PositionBaseStyle" TargetType="{x:Type CheckBox}">
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
    </Style>



    <Style
        x:Key="RSApp.Styles.WindowLeftStyle"
        BasedOn="{StaticResource RSApp.Styles.PositionBaseStyle}"
        TargetType="{x:Type CheckBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Border
                        x:Name="PART_Border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Border
                            x:Name="PART_Background"
                            Padding="5"
                            Background="#64FFFFFF"
                            CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Rectangle
                                        Grid.Row="0"
                                        Height="3"
                                        Fill="#006CBE"
                                        RenderOptions.EdgeMode="Aliased"
                                        Stroke="#006CBE" />
                                    <Rectangle
                                        Grid.Row="1"
                                        RenderOptions.EdgeMode="Aliased"
                                        Stroke="#006CBE" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Path
                                        x:Name="PART_Path"
                                        Width="5"
                                        Height="8"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="{StaticResource RSApp.Icons.MenuItemLeftArrow}"
                                        Fill="#7F000000"
                                        Stretch="Fill" />
                                </Grid>

                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_Background" Property="Background" Value="#FFF" />
                            <Setter TargetName="PART_Path" Property="Fill" Value="#333333" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


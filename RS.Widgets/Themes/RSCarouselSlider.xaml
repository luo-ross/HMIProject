<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:RS.Widgets.Models"
    xmlns:rs="clr-namespace:RS.Widgets.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Effects.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="{x:Type rs:RSCarouselSlider}">
        <Setter Property="rs:ControlsHelper.CornerRadius" Value="15" />
        <Setter Property="Width" Value="300" />
        <Setter Property="Height" Value="400" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="Background" Value="#62667f" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rs:RSCarouselSlider}">
                    <Grid>
                        <Border
                            x:Name="PART_Border"
                            Panel.ZIndex="14"
                            CornerRadius="{TemplateBinding rs:ControlsHelper.CornerRadius}"
                            RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ImageSource}" Stretch="UniformToFill" />
                            </Border.Background>
                            <Border CornerRadius="0,0,15,15">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                                        <GradientStop Offset="1" Color="#002c5364" />
                                        <GradientStop Offset="0.5" Color="#00203a43" />
                                        <GradientStop Offset="0" Color="#0f2027" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Bottom">
                                    <Border
                                        Padding="20,7,25,7"
                                        HorizontalAlignment="Left"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="0,20,20,0">
                                        <TextBlock
                                            FontSize="13"
                                            Foreground="{TemplateBinding Foreground}"
                                            Text="{TemplateBinding Caption}" />
                                    </Border>
                                    <Border Padding="20,25,40,25">
                                        <StackPanel>
                                            <TextBlock
                                                Margin="0,0,0,15"
                                                FontFamily="Open Sans"
                                                FontSize="22"
                                                FontWeight="DemiBold"
                                                Foreground="{TemplateBinding Foreground}"
                                                Text="{TemplateBinding Description}"
                                                TextWrapping="WrapWithOverflow" />

                                            <StackPanel Orientation="Horizontal">
                                                <Path
                                                    Width="25"
                                                    Height="25"
                                                    Data="{StaticResource RSApp.Icons.Location}"
                                                    Fill="{TemplateBinding Foreground}" />

                                                <TextBlock
                                                    FontSize="16"
                                                    Foreground="#fff"
                                                    Text="{TemplateBinding Location}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform X="0" Y="0" />
                                    <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Scale}" ScaleY="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Scale}" />
                                    <RotateTransform Angle="0" />
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <BlurEffect Radius="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=BlurRadius}" />
                            </Border.Effect>
                        </Border>

                        <Border x:Name="PART_BlurBorder" Effect="{StaticResource RSApp.Styles.DefaultDropShadowEffect}" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsBlur" Value="True">
                            <Setter TargetName="PART_Border" Property="Effect">
                                <Setter.Value>
                                    <BlurEffect Radius="3" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
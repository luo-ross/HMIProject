<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RS.Widgets.Converters"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:rs="clr-namespace:RS.Widgets.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Effects.xaml" />
        <ResourceDictionary Source="pack://application:,,,/RS.Widgets;component/Styles/Controls.Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <converters:ClipConverter x:Key="ClipConverter" />
    <converters:ForegroundColorConverter x:Key="ForegroundColorConverter" />




    <Style TargetType="{x:Type rs:RSDragDropEffect}">
        <Setter Property="Padding" Value="5,3,5,3" />
        <Setter Property="Background" Value="#F1F2F3" />
        <Setter Property="Margin" Value="15" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.1"
                    ShadowDepth="-1"
                    Color="#000" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rs:RSDragDropEffect}">
                    <Border>
                        <Border
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="{TemplateBinding IconWidth}"
                                    Height="{TemplateBinding IconHeight}"
                                    Padding="3">
                                    <Path
                                        x:Name="PART_Icon"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="{TemplateBinding Foreground}"
                                        Stretch="Uniform" />
                                </Border>
                                <TextBlock
                                    x:Name="PART_Text"
                                    Grid.Column="1"
                                    Margin="3,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="12" />
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="DragDropEffects" Value="Move">
                            <Setter TargetName="PART_Icon" Property="Fill" Value="#1296db" />
                            <Setter TargetName="PART_Icon" Property="Data" Value="{StaticResource RSApp.Icons.DragDropMove}" />
                            <Setter TargetName="PART_Text" Property="Text" Value="Move" />
                        </Trigger>
                        <Trigger Property="DragDropEffects" Value="Copy">
                            <Setter TargetName="PART_Icon" Property="Fill" Value="#1296db" />
                            <Setter TargetName="PART_Icon" Property="Data" Value="{StaticResource RSApp.Icons.DragDropCopy}" />
                            <Setter TargetName="PART_Text" Property="Text" Value="Copy" />
                        </Trigger>
                        <Trigger Property="DragDropEffects" Value="None">
                            <Setter TargetName="PART_Icon" Property="Fill" Value="#D81E06" />
                            <Setter TargetName="PART_Icon" Property="Data" Value="{StaticResource RSApp.Icons.DragDropNone}" />
                            <Setter TargetName="PART_Text" Property="Text" Value="Deny" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="{x:Type rs:RSDragDropPreview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rs:RSDragDropPreview}">
                    <Border>
                        <Border
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ContentPresenter />
                            </Grid>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
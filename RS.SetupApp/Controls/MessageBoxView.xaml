<rs:RSWindow
    x:Class="RS.SetupApp.Controls.MessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.SetupApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/Widgets"
    x:Name="this"
    Title="MessageBoxView"
    Width="400"
    Height="250"
    Background="#fff"
    CornerRadius="8"
    IsShowWinBtnCommands="False"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="30"
            CornerRadius="30"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Border CornerRadius="5">
        <ContentControl Content="{Binding ElementName=this, Path=MessageContent}" />
    </Border>
</rs:RSWindow>

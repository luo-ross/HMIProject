<Window
    x:Class="RS.SetupApp.Controls.QiyiMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.SetupApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/HMIProject"
    x:Name="this"
    Title="QiyiMessageBox"
    Width="400"
    Height="230"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="30"
            CornerRadius="30"
            GlassFrameThickness="0"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Border Background="#1E2126" CornerRadius="5">
        <ContentControl Content="{Binding ElementName=this, Path=MessageContent}" />
    </Border>
</Window>

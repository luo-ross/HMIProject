<UserControl
    x:Class="RS.HMI.Client.Views.Areas.UserFormView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RS.HMI.Client.Views.Areas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/Widgets"
    d:DataContext="{d:DesignInstance Type=local:UserViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fff"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="邮箱" />
        <TextBox
            x:Name="TxtEmail"
            rs:TextBoxHelper.IsShowClearButton="True"
            Text="{Binding UserModelEdit.Email}">
            <i:Interaction.Behaviors>
                <rs:FocusOnLoadBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="昵称" />
        <TextBox rs:TextBoxHelper.IsShowClearButton="True" Text="{Binding UserModelEdit.NickName}" />
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="是否禁用" />
        <CheckBox Margin="5,3,3,3" IsChecked="{Binding UserModelEdit.IsDisabled, TargetNullValue=False}" />
    </StackPanel>
</UserControl>

<UserControl
    x:Class="RS.HMI.Client.Views.Areas.UserFormView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RS.HMI.Client.Views.Areas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/Widgets"
    d:DataContext="{d:DesignInstance Type=local:UserViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="用户" />
        <TextBox Text="{Binding UserModelEdit.Email}" />
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="昵称" />
        <TextBox Text="{Binding UserModelEdit.NickName}" />
        <TextBlock
            Margin="2,0,0,0"
            Foreground="#949494"
            Text="是否禁用" />
        <CheckBox IsChecked="{Binding UserModelEdit.IsDisabled}" />
    </StackPanel>
</UserControl>

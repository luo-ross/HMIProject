<rs:RSWindow
    x:Class="RS.HMI.Client.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:areas="clr-namespace:RS.HMI.Client.Views.Areas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hmi="clr-namespace:RS.HMI.Client.Controls"
    xmlns:local="clr-namespace:RS.HMI.Client.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="https://github.com/luo-ross/Widgets"
    x:Name="this"
    Title="上位机客户端"
    MinWidth="1024"
    MinHeight="600"
    d:DataContext="{d:DesignInstance Type=local:HomeViewModel}"
    BorderCornerRadius="5"
    CaptionHeight="36"
    Icon="/Assets/login-bg.jpg"
    IsFitSystem="False"
    IsMaxsizedFullScreen="{Binding ElementName=CkIsFullScreen, Path=IsChecked}"
    IsShowTitle="False"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <!--<rs:RSWindow.DataContext>
        <local:HomeViewModel />
    </rs:RSWindow.DataContext>-->
    <rs:RSWindow.Resources>
        <ResourceDictionary>
            <rs:ClipConverter x:Key="ClipConverter" />
            <SolidColorBrush x:Key="RSApp.SolidColorBrush.EBEBEB">#EBEBEB</SolidColorBrush>
            <DataTemplate DataType="{x:Type areas:UserViewModel}">
                <areas:UserView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type areas:RoleViewModel}">
                <areas:RoleView />
            </DataTemplate>
        </ResourceDictionary>
    </rs:RSWindow.Resources>
    <rs:RSWindow.CaptionContent>
        <Grid Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="上位机客户端" />
                <Button
                    rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.BrowseBack}"
                    rs:ControlsHelper.IconHeight="13"
                    rs:ControlsHelper.IconWidth="13"
                    Command="{x:Static NavigationCommands.BrowseBack}"
                    CommandTarget="{Binding ElementName=PART_Frame}"
                    Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                    ToolTip="点击可后退，按住可查看历史记录" />
                <Button
                    rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.BrowseForward}"
                    rs:ControlsHelper.IconHeight="13"
                    rs:ControlsHelper.IconWidth="13"
                    Command="{x:Static NavigationCommands.BrowseForward}"
                    CommandTarget="{Binding ElementName=PART_Frame}"
                    Style="{StaticResource RSApp.Styles.IconButtonStyle}"
                    ToolTip="点击可前进，按住可查看历史记录" />

            </StackPanel>
            <Grid Grid.Column="1">
                <rs:RSNotifyIcon x:Name="NotifyIcon" Icon="/Assets/logo.ico">
                    <rs:RSNotifyIcon.ContextMenu>
                        <ContextMenu Placement="MousePoint">
                            <MenuItem Header="test1" />
                            <MenuItem Header="test2" />
                            <Separator />
                            <MenuItem Header="test3">
                                <MenuItem Header="test4" />
                                <MenuItem Header="test5" />
                                <MenuItem Header="test6" />
                                <MenuItem Header="test7">
                                    <MenuItem Header="test8" />
                                    <MenuItem Header="test9" />
                                    <MenuItem Header="test10" />
                                </MenuItem>
                            </MenuItem>
                        </ContextMenu>
                    </rs:RSNotifyIcon.ContextMenu>
                </rs:RSNotifyIcon>
                <!--<TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="这是中间的内容，想咋搞咋搞" />-->


            </Grid>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Setting}" Style="{StaticResource RSApp.Styles.IconButtonStyle}" />
            </StackPanel>
        </Grid>
    </rs:RSWindow.CaptionContent>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Padding="10">
                    <rs:RSSearch
                        x:Name="BtnSearch"
                        Margin="3,0,0,0"
                        IsTextChangedSearch="True"
                        OnBtnSearchCallBack="BtnSearch_OnBtnSearchCallBack"
                        SearchContent="{Binding SearchContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border Grid.Row="1">
                    <ScrollViewer>
                        <StackPanel>
                            <RadioButton
                                Margin="0,5,0,5"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Home}"
                                Content="监控中心"
                                Style="{StaticResource RSApp.Styles.NavButton}" />

                            <RadioButton
                                Margin="0,3,0,3"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.SerialPort}"
                                Content="串口通讯1"
                                Style="{StaticResource RSApp.Styles.NavButton}" />

                            <RadioButton
                                Margin="0,3,0,3"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ModbusTCP}"
                                Content="ModbusTCP"
                                Style="{StaticResource RSApp.Styles.NavButton}" />

                            <RadioButton
                                Margin="0,3,0,3"
                                rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.ModbusRTU}"
                                Content="ModbusRTU"
                                Style="{StaticResource RSApp.Styles.NavButton}" />

                            <TreeView
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding TreeModelList}">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <Border x:Name="PART_Border">
                                            <Grid Margin="0,5,0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Image
                                                    Grid.Column="1"
                                                    Width="15"
                                                    Height="15"
                                                    Margin="5,0,0,0"
                                                    Source="{Binding TreeIcon}" />
                                                <TextBlock
                                                    Grid.Column="2"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Text="{Binding TreeName}" />
                                            </Grid>
                                        </Border>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <Border
                    Grid.Row="2"
                    Padding="0,8,0,8"
                    BorderBrush="{StaticResource RSApp.SolidColorBrush.EBEBEB}"
                    BorderThickness="0,1,0,0">
                    <RadioButton
                        rs:ControlsHelper.IconData="{StaticResource RSApp.Icons.Setting}"
                        Content="设置"
                        Style="{StaticResource RSApp.Styles.NavButton}" />
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border
                x:Name="PART_ContentHost"
                Margin="10,10,10,0"
                Background="#fff"
                CornerRadius="10">
                <Border.Clip>
                    <MultiBinding Converter="{StaticResource ClipConverter}">
                        <Binding ElementName="PART_ContentHost" Path="CornerRadius" />
                        <Binding ElementName="PART_ContentHost" Path="ActualWidth" />
                        <Binding ElementName="PART_ContentHost" Path="ActualHeight" />
                    </MultiBinding>
                </Border.Clip>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Frame
                        x:Name="PART_Frame"
                        Grid.Row="1"
                        Content="{Binding ViewModelSelect}">
                        <Frame.ContextMenu>
                            <ContextMenu Placement="MousePoint">
                                <MenuItem Header="test1">
                                    <MenuItem.Icon>
                                        <Path
                                            Width="12"
                                            Height="12"
                                            VerticalAlignment="Center"
                                            Data="{StaticResource RSApp.Icons.Asterisk}"
                                            Fill="Red"
                                            Stretch="Fill" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="test2" IsChecked="True" />
                                <MenuItem Header="test3">
                                    <MenuItem Header="test4" />
                                    <MenuItem Header="test5" />
                                    <MenuItem Header="test6" IsChecked="True">
                                        <MenuItem.Icon>
                                            <Path
                                                Width="12"
                                                Height="12"
                                                VerticalAlignment="Center"
                                                Data="{StaticResource RSApp.Icons.Asterisk}"
                                                Fill="Red"
                                                Stretch="Fill" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="test7" IsChecked="True">
                                        <MenuItem Header="test8" />
                                        <MenuItem Header="test9" />
                                        <MenuItem Header="test10" IsChecked="True">
                                            <MenuItem.Icon>
                                                <Path
                                                    Width="12"
                                                    Height="12"
                                                    Data="{StaticResource RSApp.Icons.Asterisk}"
                                                    Fill="Red"
                                                    Stretch="Fill" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                </MenuItem>
                            </ContextMenu>
                        </Frame.ContextMenu>
                    </Frame>
                </Grid>
            </Border>
            <Border Grid.Row="1" Padding="10">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock Text="版本：1.0.0.0" />
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</rs:RSWindow>

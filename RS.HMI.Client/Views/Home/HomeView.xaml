            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel rs:DragDropHelper.IsDropTarget="True">
                <Button
                    Width="200"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    rs:DragDropHelper.IsDragTarget="True"
                    Content="Hello World" />

                <ListBox
                    Height="100"
                    
                    rs:DragDropHelper.IsDragTarget="True"
                    rs:DragDropHelper.IsDropTarget="True"
                    ItemsSource="{Binding Test1List}">

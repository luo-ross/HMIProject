                </ListBox>

                <TreeView rs:DragDropHelper.IsDragTarget="True" rs:DragDropHelper.IsDropTarget="True">
                    <TreeViewItem Header="测试1" />
                    <TreeViewItem Header="测试2" />
                    <TreeViewItem Header="测试3" />
                </TreeView>

            </StackPanel>


            <StackPanel
                Grid.Column="1"
                rs:DragDropHelper.IsDropTarget="True"
                Background="AliceBlue" />


